<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="400dp"
                android:background="@drawable/shape_dialog_fragment_rule_bg"
                android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_dialog_fragment_rule_title_bg"
        android:gravity="center"
        android:text="积分规则说明"
        android:textColor="@color/white"
        android:textSize="21sp"/>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_error_white"/>

    <TextView
        android:id="@+id/tv_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="1."
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_rule1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_num1"
        android:letterSpacing="0.1"
        android:text="每个人的起始信誉积分为500分。"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="2."
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_rule2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_num2"
        android:letterSpacing="0.1"
        android:text="当您超过一定的时间却不参与评分时，系统会默认给5星好评哦。"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="3."
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_rule3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_num3"
        android:letterSpacing="0.1"
        android:text="完成一个增加2分。"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="4."
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_rule4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_num4"
        android:letterSpacing="0.1"
        android:text="星数对应评分: -3, -1, 1, 3, 5分。"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="5."
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_rule5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_num5"
        android:letterSpacing="0.1"
        android:text="当您取消自己已接的订单时，会扣除信誉积分5分。"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="6."
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rule5"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_num6"
        android:letterSpacing="0.1"
        android:text="当您取消别人已接的订单时，会扣除10分信誉积分，并且收取20%的支付费用。"
        android:textSize="18sp"/>

</RelativeLayout>