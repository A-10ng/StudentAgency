<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_ratingStars"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_rating_stars"/>

    <TextView
        android:id="@+id/tv_ratingStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/icon_ratingStars"
        android:text="评价区"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_ratingStars"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="6dp"
        android:background="@color/lightslategray"/>

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/ratingBar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1"/>

    <TextView
        android:id="@+id/txt_happenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:text="评价于"/>

    <TextView
        android:id="@+id/tv_happenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="8dp"

        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_increasement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_happenTime"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="8dp"
        android:text="信誉积分"/>

    <TextView
        android:id="@+id/tv_increasement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_happenTime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>

</RelativeLayout>
