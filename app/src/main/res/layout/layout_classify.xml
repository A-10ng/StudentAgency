<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/root_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shopping"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shopping"/>

        <TextView
            android:id="@+id/tv_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代购"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/root_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_delivery"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/deliverly"/>

        <TextView
            android:id="@+id/tv_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代拿快递"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/root_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_others"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/others"/>

        <TextView
            android:id="@+id/tv_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他代办"/>

    </LinearLayout>

</LinearLayout>