<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/themeColor</item>   //EditText的竖线和下划线没有获取焦点，也就是默认的颜色
        <item name="colorControlActivated">@color/themeColor</item>  //点击EditText时竖线和下划线的颜色
    </style>

    <style name="SloganTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/slogan_style</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="dialog_comment_dialog" parent="android:style/Theme.Dialog">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_comment_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_comment_out</item>
    </style>

    <style name="timeDialogFragment">
        <item name="android:windowEnterAnimation">@anim/dialogfragment_time_in</item>
        <item name="android:windowExitAnimation">@anim/dialogfragment_time_out</item>
    </style>

    <style name="choosePicAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>   //EditText的竖线和下划线没有获取焦点，也就是默认的颜色
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>  //点击EditText时竖线和下划线的颜色
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_layer</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="jmui_record_voice_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@drawable/round_background</item>
    </style>

    <style name="TextTime">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/tv_two</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NoticeSpot">
        <item name="android:background">@drawable/notice_spot</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

</resources>
